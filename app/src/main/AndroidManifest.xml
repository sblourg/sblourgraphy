        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".controller.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".controller.HyperfocaleActivity"
            android:label="Hyperfocale"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".controller.PoseLongueActivity"
            android:label="Long exposure"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".controller.ProfondeurDeChampActivity"
            android:label="Depth of field"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>